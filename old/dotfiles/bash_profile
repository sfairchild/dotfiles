[[ -s "$HOME/.profile" ]] && source "$HOME/.profile" # Load the default .profile


##########
# Aliases#
##########

alias ll='ls -lhA'
alias dc='docker-compose'
alias be='bundle exec'


########################
# Environment Variables#
########################

export PATH=$PATH:$HOME/bin

if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi
